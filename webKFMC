    <script>
        // JavaScript for page functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Get buttons and sections
            const permitsBtn = document.getElementById('permitsBtn');
            const clearanceBtn = document.getElementById('clearanceBtn');
            const permitsSection = document.getElementById('permitsManagement');
            const clearanceSection = document.getElementById('clearanceManagement');
            const mainServices = document.querySelector('.main-services');
            const hospitalInfo = document.querySelector('.hospital-info');
            
            // Permits Button Click Handler
            permitsBtn.addEventListener('click', function(e) {
                e.preventDefault();
                mainServices.style.display = 'none';
                hospitalInfo.style.display = 'none';
                permitsSection.style.display = 'block';
                clearanceSection.style.display = 'none';
                
                // Scroll to the section
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });
            
            // Clearance Button Click Handler
            clearanceBtn.addEventListener('click', function(e) {
                e.preventDefault();
                mainServices.style.display = 'none';
                hospitalInfo.style.display = 'none';
                clearanceSection.style.display = 'block';
                permitsSection.style.display = 'none';
                
                // Scroll to the section
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });
            
            // Back button functionality (can be added to each dashboard)
            // Example: 
            // document.getElementById('backToMain').addEventListener('click', function() {
            //     mainServices.style.display = 'block';
            //     hospitalInfo.style.display = 'block';
            //     permitsSection.style.display = 'none';
            //     clearanceSection.style.display = 'none';
            // });
            
            // Simulated data for charts (in a real app, you would use a charting library)
            function simulateChartData() {
                console.log('تم تحميل بيانات الرسم البياني');
                // In a real implementation, you would use Chart.js or similar here
            }
            
            // Initialize any necessary data
            simulateChartData();
        });
    </script>
